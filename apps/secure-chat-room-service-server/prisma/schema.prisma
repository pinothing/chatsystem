datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model FriendRequest {
  createdAt   DateTime                 @default(now())
  id          String                   @id @default(cuid())
  receiver    String?
  requestDate DateTime?
  sender      String?
  status      EnumFriendRequestStatus?
  updatedAt   DateTime                 @updatedAt
}

model Message {
  chatRoom   ChatRoom? @relation(fields: [chatRoomId], references: [id])
  chatRoomId String?
  content    String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  timestamp  DateTime?
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model ChatRoom {
  capacity  Int?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  messages  Message[]
  name      String?
  roomId    Int?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  availCoins Int?
  chatRooms  ChatRoom[]
  createdAt  DateTime   @default(now())
  deviceId   Int?
  email      String?    @unique
  firstName  String?
  id         String     @id @default(cuid())
  isPrime    Boolean?
  lastName   String?
  messages   Message[]
  name       String?
  password   String
  phone      String?
  roles      Json
  updatedAt  DateTime   @updatedAt
  userId     Int?
  username   String     @unique
}

enum EnumFriendRequestStatus {
  Option1
}
